{
  "pages": [
    "pages/activityList/activityList",
    "pages/home/home",
    "pages/shop/shop",
    "pages/me/me"
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#000008",
    "navigationBarTitleText": "NZ Cloud Life",
    "navigationBarTextStyle": "white",
    "navigationStyle": "custom"
  },
  "tabBar": {
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "color": "#A7A7A7",
    "selectedColor": "#2D8DB8",
    "list": [
      {
        "pagePath": "pages/activityList/activityList",
        "iconPath": "static/icons/tabbar/badminton-7A7A7A.png",
        "selectedIconPath": "static/icons/tabbar/badminton-90CAF9.png",
        "text": "活动"
      },
      {
        "pagePath": "pages/home/home",
        "iconPath": "static/icons/tabbar/rank-7A7A7A.png",
        "selectedIconPath": "static/icons/tabbar/rank-90CAF9.png",
        "text": "排名"
      },
      {
        "pagePath": "pages/shop/shop",
        "iconPath": "static/icons/tabbar/shop-7A7A7A.png",
        "selectedIconPath": "static/icons/tabbar/shop-90CAF9.png",
        "text": "商城"
      },
      {
        "pagePath": "pages/me/me",
        "iconPath": "static/icons/tabbar/badge-7A7A7A.png",
        "selectedIconPath": "static/icons/tabbar/badge-90CAF9.png",
        "text": "我的"
      }
    ]
  },
  "style": "v2",
  "renderer": "skyline",
  "rendererOptions": {
    "skyline": {
      "disableABTest": true,
      "defaultDisplayBlock": true,
      "defaultContentBox": true
    }
  },
  "componentFramework": "glass-easel",
  "sitemapLocation": "sitemap.json",
  "useExtendedLib": {
    "weui": true
  },  
  "lazyCodeLoading": "requiredComponents",
  "resolveAlias": {
    "@Language/*": "languages/*",
    "@API/*": "apis/*",
    "@Lib/*": "utils/*"
  }
}